@page
@{
    ViewData["Title"] = "Razor";
    DateTime currentDateTime = DateTime.Now;

    //New list of strings
    List<string> Courses = new List<string>();

    //Data for list
    Courses.Add("DT057G, Webbutveckling I");
    Courses.Add("DT084G, Introduktion till programmering i JavaScript");
    Courses.Add("DT173G, Webbutveckling II");
    Courses.Add("DT163G, Digital bildbehandling för webb");
    Courses.Add("GD008G, Typografi och form för webb,");
    Courses.Add("DT152G, Webbdesign för CMS");
    Courses.Add("DT068G, Webbanvändbarhet");
    Courses.Add("DT022G, Databaser");
    Courses.Add("IK060G, Projektledning");
    Courses.Add("DT173G, Webbutveckling III");
    Courses.Add("DT190G, Javascript-baserad webbutveckling");
    Courses.Add("DT071G, Programmering i C#.NET");
    Courses.Add("IG021G, Affärsplaner och kommersialisering");
    Courses.Add("DT191G, ASP.NET med C#");
}

<h1>Razor</h1>
<h2>Information</h2>

<p><span class="bold">Date/Time: </span>@currentDateTime</p>
@{
    //Take earlier defined currentDateTime and check DayOfWeek
    if (currentDateTime.DayOfWeek == DayOfWeek.Monday)
    {
                <p>Today it is Monday!</p>
    }
    else
    {
                <p>Today is not Monday...</p>
    }
}
<h3>Courses:</h3>
<ul id="courses_ul">
    @{
        //Loop list
        foreach(var Course in Courses)
            {
                <li>@Course</li>
            }
    }
</ul>

